---
org_name: "{{ org_name }}"
org_support_email: "{{ org_support_email }}"
org_support_url: "{{ org_support_url }}"

# mail
mandrill_password: "{{ mandrill_password }}"
mandrill_username: "{{ mandrill_username }}"
sendgrid_password: "{{ sendgrid_password }}"
sendgrid_username: "{{ sendgrid_username }}"
mail_service: "{{ mail_service }}"
monitoring_email: "{{ monitoring_email }}"

# SSL/TLS
root_cert_country: "{{ root_cert_country }}"
root_cert_state: "{{ root_cert_state }}"
root_cert_city: "{{ root_cert_city }}"
root_cert_org_unit: "{{ root_cert_org_unit }}"
root_cert_common_name: "{{ root_cert_common_name }}"
root_cert_email: "{{ root_cert_email }}"

# ssh
ssh_known_hosts_command: '/usr/bin/ssh-keyscan -H -T 10'
ssh_known_hosts_file: '/root/.ssh/known_hosts'

# misc
timezone: "{{ timezone }}"
files: ./files
ssl_dir: ./files/etc/ssl/easypress
packages_dir: ./packages
wp_latest: /home/easypress/latest.tar.gz
