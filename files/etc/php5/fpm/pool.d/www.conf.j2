[www]
user = www-data
group = www-data
listen = /var/run/php5-fpm.sock
listen.backlog = 2048
listen.owner = www-data
listen.group = www-data
listen.mode = 0660
pm = dynamic
pm.max_children = {{ phpfpm_max_children }}
pm.start_servers = {{ phpfpm_start_servers }}
pm.min_spare_servers = {{ phpfpm_min_spare }}
pm.max_spare_servers = {{ phpfpm_max_spare }}
pm.process_idle_timeout = 10s
pm.max_requests = {{ phpfpm_max_requests }}
request_terminate_timeout = 300s
pm.status_path = /phpfpmstatus
slowlog = /var/log/php-fpm-slow.log
php_admin_value[memory_limit] = 256M
env[TMP] = /var/tmp
env[TMPDIR] = /var/tmp
env[TEMP] = /var/tmp
